{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "ruff format --check ."
          },
          {
            "type": "command",
            "command": "ruff check ."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/scripts/utils/play_sound.sh"
          }
        ]
      }
    ]
  }
}
