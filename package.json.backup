{
  "name": "linker-cli",
  "version": "1.0.0",
  "scripts": {
    "lint:css": "stylelint 'web/static/css/**/*.css' --fix",
    "lint:css:check": "stylelint 'web/static/css/**/*.css'",
    "css:deduplicate": "node quick-deduplicate.js",
    "css:backup": "mkdir -p css-backup && cp -r web/static/css/* css-backup/",
    "css:monitor": "node build-monitor.js",
    "css:monitor:watch": "node build-monitor.js watch",
    "css:monitor:hook": "node css-monitor-hook.js",
    "css:report": "node build-monitor.js monitor && echo 'Reports generated in reports/css-monitoring/'",
    "rgba:scan": "node scan-rgba-values.js --dry-run --verbose",
    "rgba:replace": "node scan-rgba-values.js --auto-replace",
    "rgba:interactive": "node scan-rgba-values.js --interactive",
    "rgba:help": "node scan-rgba-values.js --help",
    "test:css": "./scripts/test-css-changes.sh",
    "test:css:full": "./scripts/test-css-changes.sh --full",
    "test:css:validate": "./scripts/test-css-changes.sh --validate",
    "test:css:visual": "./scripts/test-css-changes.sh --visual",
    "test:css:performance": "./scripts/test-css-changes.sh --performance",
    "test:visual": "npx playwright test --config=tests/visual/playwright.config.js",
    "test:visual:update": "npx playwright test --config=tests/visual/playwright.config.js --update-snapshots",
    "test:visual:report": "npx playwright show-report tests/visual/reports",
    "css:performance": "node scripts/css-performance-monitor.js",
    "css:rollback": "./scripts/quick-rollback.sh",
    "css:rollback:quick": "./scripts/quick-rollback.sh --quick",
    "css:rollback:list": "./scripts/quick-rollback.sh --list",
    "css:rollback:interactive": "./scripts/quick-rollback.sh --interactive",
    "css:compress": "node scripts/css-compressor.js",
    "css:compress:clean": "node scripts/css-compressor.js --clean",
    "css:compress:max": "node scripts/css-compressor.js --compression-level 9",
    "css:compress:nobrotli": "node scripts/css-compressor.js --no-brotli",
    "css:analyze": "node scripts/css-compression-analyzer.js",
    "css:analyze:nobrotli": "node scripts/css-compression-analyzer.js --no-brotli",
    "css:size": "node scripts/css-compression-analyzer.js && echo 'Detailed reports in reports/compression/'",
    "css:optimize": "npm run css:compress:clean && npm run css:compress:max && npm run css:analyze",
    "css:build": "npm run css:optimize",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.54.2",
    "chokidar": "^4.0.1",
    "cssnano": "^7.1.0",
    "glob": "^11.0.0",
    "husky": "^9.0.11",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-combine-duplicated-selectors": "^10.0.3",
    "postcss-discard-duplicates": "^7.0.2",
    "postcss-merge-rules": "^7.0.6",
    "purgecss": "^7.0.2",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1"
  },
  "dependencies": {
    "playwright": "^1.54.2"
  }
}
